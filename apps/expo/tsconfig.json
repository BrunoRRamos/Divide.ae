{
  "extends": ["@/tsconfig/base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "jsx": "react-native",
    "types": ["nativewind/types"],
    "checkJs": false
  },
  "include": [
    "src",
    "*.ts",
    "*.js",
    "*.tsx",
    "*.mjs",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "env.d.ts",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
