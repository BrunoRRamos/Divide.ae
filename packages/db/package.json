{
  "name": "@/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "license": "MIT",
  "scripts": {
    "build": "pnpm generate && tsc",
    "dev": "pnpm with-env tsx --watch src/index.ts",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "pnpm generate && eslint",
    "push": "pnpm with-env prisma db push",
    "generate": "pnpm with-env prisma generate",
    "migrate": "pnpm with-env prisma migrate dev",
    "studio": "pnpm with-env prisma studio",
    "typecheck": "pnpm generate && tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "@t3-oss/env-core": "^0.11.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@/eslint-config": "workspace:*",
    "@/prettier-config": "workspace:*",
    "@/tsconfig": "workspace:*",
    "dotenv-cli": "^7.4.2",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@/prettier-config"
}
